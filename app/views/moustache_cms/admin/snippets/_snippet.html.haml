%tr{:id => "snippet_#{snippet.name}", :class => "#{cycle('even', 'odd')}"}
  %td.name= link_to snippet.name, [:edit, :admin, snippet]
  - if can? :destroy, snippet
    %td.delete= link_to "Delete", [:admin, snippet], :method => :delete, :data => { :confirm => "Are you sure you want to delete the snippet #{snippet.name}" }, :class => "delete"
