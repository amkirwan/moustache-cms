%tr{:id => "#{image.name}_image", :class => "#{cycle('even', 'odd', :name => 'table_list')}"}
  %td.name= link_to image.name, [:edit, :admin, @theme_collection, image]
  - if can? :destroy, image 
    %td.delete= link_to "Delete", [:admin, @theme_collection, image], :method => :delete, :data => { :confirm => "Are you sure you want to delete the image theme file #{image.name}"}, :class => "delete" 

