- header_content 'shared/header_wrapper', :object => @article do
  - if can? :destroy, @article
    %div{:id => "delete_article", :class => "delete"}
      = link_to "Delete Article", [:admin, @article_collection, @article], :data => { :confirm => "Are you sure you want to delete the article #{@article.title}" }, :method => :delete, :class => "action delete"

- inner_content "shared/inner_wrapper" do
  %div.breadcrumb
    = link_to "&laquo; #{@article_collection.name.titleize} Collection".html_safe, [:admin, @article_collection]
  %div.view
    = link_to 'View Page', @article.full_path, :target => "_blank", :class => 'view_page'
    = link_to 'Preview Changes', @article.full_path, :target => "_blank", :class => 'view_page preview'
  = render :partial => "form",:locals => { :button_label => "Update Article" }
