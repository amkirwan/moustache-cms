- unless article.read_attribute(:preview)
  %tr{:id => "#{article.title.parameterize}", :class => "#{cycle('even', 'odd')} #{published?(article)}"}
    %td.title= link_to article.title, [:edit, :admin, @article_collection, article]
    %td.updated_at= article.updated_at.strftime("%a %b #{article.updated_at.day.ordinalize} %Y")
    %td.updated_by= article.updated_by.username
    %td.status= article.status
    - if can? :destroy, article
      %td.delete= link_to "Delete", [:admin, @article_collection, article], :method => :delete, :data => { :confirm => "Are you sure you want to delete the article #{article.title}" }, :class => "delete"
