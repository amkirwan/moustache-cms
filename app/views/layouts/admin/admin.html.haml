!!!5
%html
  %head{:lang => "en"}
    %meta{:charset => "UTF-8"}
    %title= "#{@current_site.name.titleize} - #{yield :title}"
    = stylesheet_link_tag "application"
    = csrf_meta_tag
  %body{:class => body_id_set}
    #wrapper
      #header
        %h1#site
          = link_to "#{@current_site.name.titleize} Site", "/" 
        = render :partial => "layouts/admin/welcome"
      #main
        = render :partial => "layouts/admin/nav"
        #content
          = yield
    #footer
    = render :partial => 'layouts/admin/js_footer'
